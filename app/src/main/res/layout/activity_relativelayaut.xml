<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".Relativelayaut">


    <ImageView

        android:id="@+id/logo"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="@android:dimen/app_icon_size"
        android:src="@drawable/rostro"
        />

    <EditText
        android:id="@+id/email"
        android:layout_below="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textSize="40sp"
        android:inputType="textEmailAddress"
        android:layout_margin="20dp"
        />
    <EditText
        android:id="@+id/contrasena"
        android:layout_below="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contraseña"
        android:textColor="@color/colorPrimary"
        android:textSize="40sp"
        android:inputType="textPassword"
        android:layout_margin="20dp"
        />:
    <Button
        android:id="@+id/ingresar"
        android:layout_below="@+id/contrasena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresar"
        android:textSize="40sp"
        android:layout_margin="20dp"
        />
    <EditText
        android:id="@+id/olvidar"
        android:layout_below="@+id/ingresar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="olvido su contraseña?"
        android:textColor="@color/colorAccent"
        android:textSize="10sp"
        android:inputType="textMultiLine"
        android:layout_margin="20dp"
        />
    <EditText
        android:id="@+id/terminos"
        android:layout_below="@+id/olvidar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Terminos y condiciones"
        android:textSize="10sp"
        android:inputType="textMultiLine"
        android:layout_margin="20dp"
        />
  </RelativeLayout>